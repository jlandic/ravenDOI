{
  "name": "RavenDOI",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "We believe that knowledge must be free, and if it's not, it's up to us to make it.",
  "icons": {
    "16": "images/icons/raven_icon_16.png",
    "48": "images/icons/raven_icon_48.png",
    "128": "images/icons/raven_icon_128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/badges.js",
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "images/icons/raven_icon_19.png",
    "default_title": "RavenDOI",
    "default_popup": "src/browser_action/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/apply_DOI_link.js"]
    }
  ],
  "permissions": [
    "https://*/*",
    "storage",
    "tabs"
  ]
}
